{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./lib",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM"],
        "jsx": "preserve",
        "resolveJsonModule": true
    },

    "include": ["index.ts", "src/**/*.ts", "src/**/*.tsx"]
}
