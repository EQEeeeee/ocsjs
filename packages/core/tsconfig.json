{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./lib",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM"],

        "resolveJsonModule": true
    },

    "include": ["./index.ts", "./src/**/*.ts", "vite.config.ts"]
}
