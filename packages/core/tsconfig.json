{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "es2021"
    ],
    "jsx": "preserve",
    "resolveJsonModule": true
  },
  "include": [
    "./src/core/index.ts",
    "./src/**/*.ts",
    "src/script/zhs/index.ts"
  ]
}