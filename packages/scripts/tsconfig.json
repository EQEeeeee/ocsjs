{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./lib",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["DOM", "ES2020"],
		"jsx": "preserve",
		"resolveJsonModule": true
	},
	"include": ["./src/**/*.ts"],
	"files": ["./global.d.ts"]
}
